<section class="text-slate-100 flex items-center justify-center h-screen">
  <!-- html here -->
  <div>
    <div class="flex justify-center mb-6">
      <%- include("../utility/logo.ejs") %>
    </div>
    <div class="bg-[#0b1e1e] p-4 sm:p-5 rounded-lg border border-slate-600 shadow-md">
      <div class="mb-4">
        <h1 class="text-2xl font-bold">Create an account!</h1>
        <p class="text-sm text-slate-300 sm:text-lg">You'll use this account later to sign in</p>
      </div>
      <!-- form here -->
      <form action="#" class="box-border">
        <div>
          <label class="inline-block mb-2 text-slate-300" for="email">Your Name</label>
          <%- include("../inputs/input-box", { type: "text", name: "name" }) %>
        </div>
        <div>
          <label class="inline-block mb-2 text-slate-300" for="email">Your Email</label>
          <%- include("../inputs/input-box", { type: "email", name: "email" }) %>
        </div>
        <div>
          <label class="inline-block mb-2 text-slate-300" for="email">Create Password</label>
          <%- include("../inputs/input-box", { type: "password", name: "password" }) %>
        </div>
        <div class="flex-col justify-start sm:flex sm:items-center sm:flex-row sm:gap-3 mt-2 mb-2">
          <input class="ml-2" type="checkbox" id="check" required/>
          <label for="check">I accept the <em>Terms and conditions</em></label>
        </div>
        <%- include("../buttons/btn-pill", { text: "Register" }) %>
        <div class="text-[15px] sm:text-base mt-4 block">
          Already have one? <button class="text-[#26b88b] hover:opacity-60" onclick="redirect('/login')">Login Now</button>
        </div>
      </form>
    </div>
  </div>
</section>


